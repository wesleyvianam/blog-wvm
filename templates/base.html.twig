<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div style="display:flex;align-items:center;justify-content:space-around;padding: 0, 100px;">
            <h1>{{ "< WVM />" }}</h1>
            <div>
                <a href="{{ path('home_app') }}">Home</a>
                <a href="{{ path('articles_app') }}">Articles</a>
                <a href="{{ path('about_app') }}">About</a>
                <a href="{{ path('contact_app') }}">Contact</a>
            </div>
            <div>
                {% if is_granted('ROLE_USER') %}
                    <a href="{{ path('app_logout') }}">Sair><a>
                {% else %}
                    <h2>____</h2>
                {% endif %}
            </div>
        </div>
        {% block body %}{% endblock %}
    </body>
</html>
