{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .header {display: flex; justify-content: space-between; align-items: center; }
    .list-article {border:1px solid #cccccc; margin: 10px 0;border-radius: 10px;padding:1rem; display: flex; justify-content: space-between;align-items:center; }
    .list-article-btn {text-decoration: none; border: 1px solid;border-radius:10px;padding:5px 10px; }
    .ul {list-style-type: none !important;padding-inline-start: 0; }
</style>

<div class="example-wrapper">
    <div class="header">
        <h1>All Articles:</h1>
        {% if is_granted('ROLE_USER') %}
            <a href="{{ path('create_article') }}">CRIAR NEW ARTICLE</a>
        {% endif %}
    </div>

    <div>
        <ul class="ul">
            {% for article in articles %}
                <li class="list-article">
                    <div>
                        <strong>{{ article.title }}</strong> <br/>
                        <span><strong>Author:</strong> {{ article.author }}</span>
                    </div>
                    <a href="{{ path('article_by_id', {id: article.id}) }}" class="list-article-btn">Read Article</a>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>
{% endblock %}